<h1>MY TASKS</h1>
<ul>
  <% @tasks.each do |t| %>
  <li><%= check_box("task", t.id, {checked: t.completed}) %><%= link_to t.title, task_path(t) %>  <%= link_to "Delete", task_path(t), method: :delete, data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>
<%= link_to "Add a new task", tasks_new_path %>
